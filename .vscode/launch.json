{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ - Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/examples/hello_bighybrid.bin",
            "args": [
                "platforms/plat350-350.xml", 
                "platforms/d-plat350-350.xml", 
                "bighyb-plat350-350.conf", 
                "volatiles/parser-boinc-080.txt"
            ],
            "environment": [{"name": "LD_LIBRARY_PATH", "value": "/opt/simgrid/lib64"}],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/examples",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}